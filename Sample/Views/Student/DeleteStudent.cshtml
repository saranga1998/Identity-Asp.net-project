@model Sample.ViewModel.StudentViewModel

@{

    Layout = "_LayoutActions";
}


<div class="row justify-content-center m-3">

    <div class="col-md-6 m-3 card">
        <p class="fw-bold justify-content-center fs-4">Delete Student</p>
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group input-group-md mb-3 col-8">
                <label asp-for="Id" class="input-group-text col-4 rounded-3 border border-end-0 border-3">Student Id</label>
                <input asp-for="Id" class="form-control col-4 rounded-3 border border-start-0 border-3" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="input-group input-group-md mb-3 col-8">
                <label asp-for="Name" class="input-group-text col-4 rounded-3 border border-end-0 border-3">Student Name</label>
                <input asp-for="Name" class="form-control col-4 rounded-3 border border-start-0 border-3" readonly/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group input-group-md mb-3 col-8">
                <label asp-for="Address" class="input-group-text col-4 rounded-3 border border-end-0 border-3">Student Address</label>
                <input asp-for="Address" class="form-control col-4 rounded-3 border border-start-0 border-3" readonly/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="input-group input-group-md mb-3 col-8">
                <label asp-for="DepartmentId" class="input-group-text col-4 rounded-3 border border-end-0 border-3">Department Id</label>
                <input asp-for="DepartmentId" class="form-control col-4 rounded-3 border border-start-0 border-3" readonly/>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="input-group input-group-md mb-3 col-8">
            <a class="btn btn-primary" asp-controller="Student" asp-action="DeleteStudentConfirm" asp-route-stuId="@Model.Id">Delete</a>
            </div>
        
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


