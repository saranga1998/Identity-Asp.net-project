@model Sample.ViewModel.CompositeViewModel

@{
    ViewData["Title"] = "ViewDepartment";
    Layout = "_LayoutActions";
}



<div class="row justify-content-center m-3">
    <div class="col-md-8 m-3 card">
        <p class="fw-bold justify-content-center fs-4">View All Department</p>

        <table class="table border border-1 rounded-2">
            <thead >
                <tr>
                    <th class="Col01">Department ID</th>
                    <th class="Col02">Department Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var department in Model.Departments)
                    {
                        <tr>
                            <td>@department.DepartmentId</td>
                            <td>@department.Name</td>

                            <td>

                                <a href="/Department/EditDepartment?DepartmentId=@department.DepartmentId">Edit</a>
                                @* <a asp-action="Delete" asp-route-id="@department.Name">Delete</a> *@
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
   


</div>
